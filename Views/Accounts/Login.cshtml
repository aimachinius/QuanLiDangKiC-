@{
    ViewBag.Title = "Đăng nhập";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center my-5">Đăng Nhập</h2>

            <!-- Hiển thị thông báo lỗi nếu có -->
            @if (ViewBag.ThongBao != null)
            {
                <div class="alert alert-danger">
                    @ViewBag.ThongBao
                </div>
            }

            @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="tk">Tên đăng nhập</label>
                    @Html.TextBox("tk", null, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
                </div>

                <div class="form-group">
                    <label for="mk">Mật khẩu</label>
                    @Html.Password("mk", null, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Đăng nhập</button>
                </div>
            }

            <div class="text-center mt-3">
                <p>Bạn chưa có tài khoản? <a href="@Url.Action("Register", "Accounts")">Đăng ký ngay!</a></p>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
