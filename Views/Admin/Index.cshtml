@{
    ViewBag.Title = "Trang Quản Trị";
}

<div class="container mt-4">
    <h2 class="text-center">Chào mừng đến với Trang Quản Trị</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản lý học viên</h5>
                    <a href="@Url.Action("DanhSachHocVien", "Admin")" class="btn btn-primary btn-block">Xem danh sách học viên</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quản lý khóa học</h5>
                    <a href="@Url.Action("DanhSachKhoaHoc", "Admin")" class="btn btn-primary btn-block">Xem danh sách khóa học</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Danh sách đăng ký</h5>
                    <a href="@Url.Action("DanhSachDangKy", "Admin")" class="btn btn-primary btn-block">Xem danh sách đăng ký</a>
                </div>
            </div>
        </div>
    </div>
</div>

