

@if (Session["VaiTro"] != null)
{
    if ((bool)Session["VaiTro"] == true) // Admin
    {
        <h2>Xin chào, Admin!</h2>
        <p>Chào mừng bạn đến với hệ thống quản lý khóa học.</p>
        <a href="@Url.Action("Create", "KhoaHocs")">Thêm khóa học</a> <!-- Admin có thể thêm khóa học -->
    }
    else // Học viên
    {
        <h2>Xin chào, Học viên!</h2>
        <p>Chào mừng bạn đến với hệ thống.</p>
        <a href="@Url.Action("Index", "DangKyKhoaHocs")">Xem các khóa học bạn đã đăng ký</a> <!-- Học viên xem khóa học đã đăng ký -->
    }
}
else
{
    <h2>Vui lòng đăng nhập để tiếp tục!</h2>
}



